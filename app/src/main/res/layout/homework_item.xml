<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dzSubjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Русский язык"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dzitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Д/З:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dzSubjectName" />

    <TextView
        android:id="@+id/dz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Сделать то, сделать другое, что-то еще и трали вали"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dzitem"
        app:layout_constraintTop_toBottomOf="@+id/dzSubjectName" />
</androidx.constraintlayout.widget.ConstraintLayout>